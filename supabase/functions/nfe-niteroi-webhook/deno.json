{
  "compilerOptions": {
    "lib": ["dom", "deno.ns"]
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": false
    }
  },
  "tasks": {
    "start": "deno run --allow-all --watch index.ts"
  }
}
